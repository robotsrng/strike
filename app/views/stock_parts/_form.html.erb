
<%= simple_form_for(@stock_part) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category_code %>
    <%= f.input :supplier_cost %>
    <%= f.input :minimum_qty %>
    <%= f.input :maximum_qty %>
    <%= f.input :restock_to_level %>
    <%= f.input :stock_links %>
    <%= f.input :contract_price %>
    <%= f.input :user_history %>
    <%= f.input :notes %>
    <%= f.association :customer_portal %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
