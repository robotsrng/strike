<p id="notice"><%= notice %></p>

<h1>Chits</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Type code</th>
      <th>Product cost</th>
      <th>Description</th>
      <th>Notes</th>
      <th>History</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chits.each do |chit| %>
      <tr>
        <td><%= chit.quantity %></td>
        <td><%= chit.type_code %></td>
        <td><%= chit.product_cost %></td>
        <td><%= chit.description %></td>
        <td><%= chit.notes %></td>
        <td><%= chit.history %></td>
        <td><%= chit.stock %></td>
        <td><%= link_to 'Show', chit %></td>
        <td><%= link_to 'Edit', edit_chit_path(chit) %></td>
        <td><%= link_to 'Destroy', chit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

